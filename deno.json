{
  "compilerOptions": {
    "strict": true,
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
  "fmt": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "options": {
      "indentWidth": 2,
      "singleQuote": false,
      "semi": true
    }
  }
}
